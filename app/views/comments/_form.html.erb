<%= simple_form_for comment do |f| %>
  <%= f.hidden_field :commentable_id, value: commentable_id %>
  <%= f.hidden_field :commentable_type, value: commentable_type %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.input :content, label: false, input_html: {class: "form-control"}, placeholder: "Comment here!" %>
  <%= f.submit "Submit comment", class: "btn btn-primary mt-2" %>
<% end %>
